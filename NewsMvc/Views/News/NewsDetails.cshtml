<section id="news-details">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 p-b-30">
                <div class="details p-b-30">
                    <h3 class="title">@Model.NewsDetails.Title</h3>
                    <div class="added-by-date p-b-30">
                        <span class="cl8">
                            <a href="#" class="name trans-03">
                                By, Sahra
                            </a>
                            <span class="f1-s-3 m-rl-3"> - </span>
                            <span class="f1-s-3"> 22 Jan, 2020</span>
                        </span>

                    </div>
                    <div class="news-pic">
                        <span class="category">@Model.NewsDetails.Category.Name</span>
                        <img src="assets/img/@Model.NewsDetails.Photo" alt="IMG">
                    </div>
                    @Html.Raw(Model.NewsDetails.Text)
                </div>
                <div class="share">
                    <span>Share: </span>
                    <ul class="social media">
                        <li class="facebook">
                            <a href="#"><i class="fab fa-facebook-f"></i>Facebook</a>
                        </li>
                        <li class="twitter">
                            <a href="#"><i class="fab fa-twitter"></i>Twitter</a>
                        </li>
                        <li class="google-plus">
                            <a href="#"><i class="fab fa-google-plus-g"></i>Google+</a>
                        </li>
                        <li class="pinterest">
                            <a href="#"><i class="fab fa-pinterest"></i>Pinterest</a>
                        </li>
                    </ul>
                </div>
                <!-- there is form for send ur comment -->
                <div class="self-comment">
                    <h4>5 Comments</h4>
                    <div class="comment">
                        <div class="image">
                            <img src="assets/img/comment1.jpg" alt="">
                        </div>
                        <form>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <textarea class="form-control" id="comments" name="comments"
                                                  placeholder="Leave A Comments"></textarea> </textarea>
                                    </div>
                                </div>
                                <div class="form-row col-lg-12">
                                    <button class="cancel-button" type="submit" name="submit" id="submit">
                                        CANCEL
                                    </button>
                                    <button class="post-button" type="submit" name="submit" id="submit">
                                        Post cOMMENT
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- form finished -->
                <!-- there are comment and reply -->
                <div class="blog-comments">
                    <div class="comment-list">
                        <div class="comment">
                            <!-- image's who wrote the comment -->
                            <div class="image">
                                <img src="assets/img/comment1.jpg" alt="">
                            </div>
                            <div class="content">
                                <!-- him name information and date when he wrote this comment -->
                                <div class="head">
                                    <h5>Jonathom Doe</h5>
                                    <span>28 Aug, 2020</span>
